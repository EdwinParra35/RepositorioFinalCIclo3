<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a href="@urlmovie">
        <img src="@Movie.MovieImage" alt="Poster" style="width: 225px; height:300px;" />
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;"><a href="@urlmovie">@Movie.Moviename</a></p>
    <div>
        <a class="btn btn-info" href="/movies/edit/@Movie.id">Editar</a>
        <button type="button" class="btn btn-danger"
                @onclick="@(() => DeleteMovie.InvokeAsync(Movie))">
            Borrar
        </button>
    </div>
</div>

@code {
    [Parameter] public Movie Movie { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Movie> DeleteMovie { get; set; }
    private string urlmovie = string.Empty;

    protected override void OnInitialized()
    {
        urlmovie = $"movie/{Movie?.id}/{Movie?.Moviename?.Replace(" ", "-")}";
    }
}
