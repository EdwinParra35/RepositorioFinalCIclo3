<div style="margin-right: 2%; margin-botton: 10px; text-align: center;">
    <a href="@urlMovie">
        <img src="@Movie.MovieImage" alt="Poster" width="225px" height="300px">        
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; fomt-weight: bold;">
        <a href="@urlMovie">@Movie.Moviename</a>        
        <div >
            <a class="btn btn-info">Editar</a>
            <button class="btn btn-danger" type="button" 
            @onclick="@(()=>DeleteMovie.InvokeAsync(Movie))">Eliminar</button>
        </div>
    </p>
</div>

@code{
    [Parameter] public Movie Movie{get;set;}
    [Parameter] public EventCallback<Movie> DeleteMovie{get;set;}
    private string urlMovie =string.Empty;
    protected override void OnInitialized(){
        urlMovie =$"movie/";
    }
}