<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" rel="home" href="" title="MinTIC">
        <img style="max-width:80px; margin-top: -7px;"
             src="/Images/logo.png">
    </a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Peliculas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" @onclick="()=>expandSubMenu = !expandSubMenu">
                <span class="oi oi-move" aria-hidden="true"></span> Peliculas
            </NavLink>
            @if(expandSubMenu){
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="/movies/create">
                            <span class="oi oi-file" aria-hidden="true"></span> Crear Pelicula
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="/movies/edit/2">
                            <span class="oi oi-file" aria-hidden="true"></span> Editar Peliculas
                        </NavLink>
                    </li>
                </ul>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/actors" @onclick="()=>expandSubMenuActor = !expandSubMenuActor">
                <span class="oi oi-move" aria-hidden="true"></span> Actores
            </NavLink>
            @if(expandSubMenuActor){
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="/actors/create">
                            <span class="oi oi-file" aria-hidden="true"></span> Crear Actor
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="/actors/edit/3">
                            <span class="oi oi-file" aria-hidden="true"></span> Editar Actor
                        </NavLink>
                    </li>
                </ul>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/categories" @onclick="()=>expandSubMenuCateg = !expandSubMenuCateg">
                <span class="oi oi-move" aria-hidden="true"></span> Categorias
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/actors">
                <span class="oi oi-star" aria-hidden="true"></span> Vista de Actores
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/movies/search">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Buscar Peliculas
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/Actors/search">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Buscar Actores
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/moviesre">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Pagina no encontrada
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenu;
    private bool expandSubMenuActor;
    private bool expandSubMenuCateg;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
